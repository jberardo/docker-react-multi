{
    "AWSEBDockerrunVersion" : 2,
    "containerDefinitions": [
        {
            "name" : "client",
            "image" : "jberardo/docker-react-multi-client",
            "hostname" : "client",
            "essential" : false
        },
        {
            "name" : "server",
            "image" : "jberardo/docker-react-multi-server",
            "hostname" : "api",
            "essential" : false
        },
        {
            "name" : "worker",
            "image" : "jberardo/docker-react-multi-worker",
            "hostname" : "worker",
            "essential" : false
        },
        {
            "name" : "nginx",
            "image" : "jberardo/docker-react-multi-nginx",
            "hostname" : "nginx",
            "essential" : true,
            "portMappings": [
                {
                    "hostPort": 80,
                    "containerPort": 80
                }
            ],
            "links" : ["client", "server"]
        }
    ]
}